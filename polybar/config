ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = S;

label-focused = %name% %icon%
label-focused-padding = 3 
label-focused-background = #555

label-unfocused = %name% %icon%
