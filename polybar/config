icon-play-background  = ${colors.custom_background_dark}
icon-pause            = %{T3}%{T-}
icon-pause-foreground = ${colors.custom_foreground}
icon-pause-background = ${colors.custom_background_dark}
icon-prev             = %{T3}%{T-}
icon-prev-foreground  = ${colors.custom_foreground}
