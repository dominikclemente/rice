[colors]
custom_foreground 	    = ${xrdb:custom_foreground}
custom_background_dark 	= ${xrdb:custom_background_dark}
custom_background_light = ${xrdb:custom_background_light}
custom_primary    	 	= ${xrdb:custom_primary}
custom_warn    	 		= ${xrdb:custom_warn}
foreground 	    = ${xrdb:foreground}
background 	= ${xrdb:custom_background_dark}
background_light = ${xrdb:custom_background_light}
primary    	 	= ${xrdb:custom_primary}
warn    	 		= ${xrdb:custom_warn}




[bar/mainbar-bspwm]
monitor      = ${env:MONITOR}
height       = 25
bottom       = false
fixed-center = false

wm-restack = bspwm


background = ${colors.custom_background_dark}
foreground = ${colors.custom_foreground}

font-0 = Iosevka Term:fontformat=truetype:pixelsize=10:antialias=true;2
font-1 = Iosevka Nerd Font Mono:fontformat=truetype:size=14:antialias=true;3
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=14;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=14;1"
font-4 = "Font Awesome 5 Brands:pixelsize=14;1"
font-5 = Material Icons:fontformat=truetype:pixelsize=10:antialias=true;3


modules-left   = left_end bspwm right_end
modules-center = left_end xwindow right_end 
modules-right  = left_end battery memory divider cpu divider temperature  divider wifi_down wifi_up eth_down eth_up divider keyboard divider volume divider date divider time right_end

[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = " "
format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colors.custom_background_light}
label-focused-underline= #6790eb
label-focused-padding = 2
label-focused-foreground = ${colors.foreground}

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-background = ${xrdb:color3::#333}


label-urgent = %icon%
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2
label-empty-background = ${xrdb:color2:#222}
label-monocle = "  "
label-monocle-foreground = ${colors.foreground}
label-tiled = "  "
label-tiled-foreground = ${colors.foreground}
label-fullscreen = "  "
label-fullscreen-foreground = ${colors.foreground}
label-floating = "  "
label-floating-foreground = ${colors.foreground}
label-pseudotiled = "  "
label-pseudotiled-foreground = ${colors.foreground}
label-locked = "  "
label-locked-foreground = ${colors.foreground}
label-sticky = "  "
label-sticky-foreground = ${colors.foreground}
label-private =  "     "
label-private-foreground = ${colors.foreground}

; Separator in between workspaces
;label-separator = |
;label-separator-padding = 10
;label-separator-foreground = #ffb52a
${colors.background}
format-foreground = ${colors.foreground}
format-background = ${colors.background}


