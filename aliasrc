alias ka='killall'
alias venv='virtualenv'
alias cin='source ~/anaconda3/bin/activate'
alias conde='conda deactivate'
alias walls='cd ~/pix/walls/'
alias wall='wal -i ~/pix/walls/'
alias fill='feh --bg-fill "$(< "${HOME}/.cache/wal/wal")"'
